# Backend Environment Variables for Farm Chain

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/farmchain

# Algorand Network Configuration
ALGO_NODE_URL=https://testnet-api.algonode.cloud
ALGO_NODE_TOKEN=
ALGO_INDEXER_URL=https://testnet-idx.algonode.cloud
ALGO_INDEXER_TOKEN=

# Master Wallet (Funder Account)
# Generate a wallet on TestNet and fund it with dispenser
# Use algosdk.mnemonicToSecretKey() to convert mnemonic
MASTER_MNEMONIC=your twenty five word mnemonic phrase goes here for funding new wallets

# Encryption Key for Custodial Wallets
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# IPFS/Pinata Configuration (Optional - for backend uploads)
PINATA_JWT=your_pinata_jwt_token_here
PINATA_API_KEY=your_pinata_api_key_here
PINATA_API_SECRET=your_pinata_api_secret_here

# Logging
LOG_LEVEL=info
